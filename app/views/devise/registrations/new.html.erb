<br />

<h2 class="title is-3 member-title">會員註冊</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class='error-message'>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <br />

  <div class='form-center'>
    <div class="field">
      <%= f.label :nickname, '請輸入暱稱' %>
      <div class="control">
        <%= f.text_field :nickname, class: 'input', placeholder: '請輸入暱稱' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, '請輸入信箱' %>
      <div class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input', placeholder: '請輸入信箱' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, '請設定密碼' %>
      <% if @minimum_password_length %>
        （密碼最少 <%= @minimum_password_length %> 個字）
      <% end %><br />
      <div class="control">
        <%= f.password_field :password, autocomplete: "new-password", class: 'input', placeholder: '請輸入密碼' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, '請再次輸入密碼' %>
      <div class="control">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input', placeholder: '請再次輸入密碼' %>
      </div>
    </div>

  <br />

    <div class="field is-grouped less-button-center">
      <div class="control">
        <%= f.submit "註冊", class: 'button is-primary' %>
      </div>
<% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>


