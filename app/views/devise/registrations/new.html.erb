<br />

<h2 class="title is-3">會員註冊</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, '請輸入信箱' %><br />
    <div class="control" style='width: 20%'>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input', placeholder: '請輸入信箱' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, '請設定密碼' %>
    <% if @minimum_password_length %>
    （密碼最少 <%= @minimum_password_length %> 個字）
    <% end %><br />
    <div class="control" style='width: 20%'>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input', placeholder: '請輸入密碼' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '請再次輸入密碼' %><br />
    <div class="control" style='width: 20%'>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input', placeholder: '請再次輸入密碼' %>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <%= f.submit "註冊", class: 'button is-primary' %>
    </div>
<% end %>

    <div class="control">
      <%= render "devise/shared/links" %>
    </div>
  </div>



