<br />

<h2 class="title is-3 member-title">編輯會員資料</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class='error-message-edit'> 
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <br />

  <div class='form-center-edit'>
    <div class="field">
      <%= f.label :nickname, '暱稱' %>
      <div class="control">
        <%= f.text_field :nickname, value: current_member.try(:nickname), autofocus: true, class: 'input', placeholder: '請輸入暱稱' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, '信箱' %>
      <div class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input', placeholder: '請輸入註冊信箱' %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :intro, '個人簡介' %>
      <div class="control">
        <%= f.text_area :intro, class: 'textarea', rows: 8 %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, '密碼更新' %>
      <div class="control">
        <%= f.password_field :password, autocomplete: "new-password", class: 'input', placeholder: '請輸入新密碼' %>
      </div>  
      <% if @minimum_password_length %>
        <p class='content is-small' style="color:#0066FF">密碼最少 <%= @minimum_password_length %> 個字，若不想更改，請保持空白</p>
      <% else %>
        <p class='content is-small' style="color:#0066FF">若不想更改，請保持空白</p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, '密碼更新確認' %>
      <div class="control">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input', placeholder: '請再次輸入密碼' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :current_password, '請輸入原來的密碼' %>
      <div class="control">
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'input', placeholder: '請輸入原來的密碼' %>
      </div>
      <p class='content is-small' style="color:#0066FF">為保障使用者權益，修改資料需確認密碼</p>
    </div>

  <br />

    <div class="field is-grouped button-center">
      <div class="control">
        <%= f.submit "會員資料更新", class: 'button is-primary' %>
      </div>
<% end %>
      <div class="control">
        <%= link_to "回上一頁", :back, class: 'button is-light' %>
      </div>
    </div>
  </div>

