<section class="comment-editor">
  <% if member_signed_in? %>
    <%= form_with model: comment, url: story_comments_path(story), class: 'comment_form', method: :post, remote: true do |form| %>
      <%= form.text_area :content, rows: 5, class: "textarea is-small image-bottom" %>
      <%= form.button '送出', class: "button is-primary is-fullwidth" %>
    <% end %>
  <% else %>
    <div align="center">
      <%= link_to "請先登入", new_member_session_path, class: 'button is-success' %>
      <%= link_to "會員註冊", new_member_registration_path, class: 'button is-info' %>
    </div>
  <% end %>
</section>